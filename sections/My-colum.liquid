<div class="slider-block" style="text-align:{{ section.settings.vertical_alignment }};">
  <h2>{{ section.settings.title }}</h2>
  <div class="card-slider-track" style="display:flex; gap :10px; overflow:hidden;">
    {% for block in section.blocks %}
      <div class="card-slider">
        {% if block.type == 'slide' %}
          <img src="{{ block.settings.image | img_url: '400x300' }}" width="100%" height="85%">
          <div>
            <p style="font-size:{{ section.settings.font_size }}px">{{ block.settings.textid }}</p>
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "my colums",
  "tag": "section",
  "class": "slideshow",
  "limit": 2,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Slideshow"
    },
      {
       "type": "select",
       "id": "vertical_alignment",
       "label": "text alignment",
       "options": [
    {
      "value": "left",
      "label": "left"
    },
    {
      "value": "center",
      "label": "center"
    },
    {
      "value": "right",
      "label": "right"
    }
  ],
  "default": "left"
},
      {
  "type": "range",
  "id": "font_size",
  "min": 12,
  "max": 24,
  "step": 1,
  "unit": "px",
  "label": "Font size",
  "default": 16
}
  ],
  "max_blocks": 30,
  "blocks": [
     {
       "name": "Slide",
       "type": "slide",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         },
         {
           "type":"text",
        "id":"textid",
        "label":"textfield",
        "default":"I am section"
         }
       ]
     }
  ],
  "presets": [
    {
      "name": "Slideshow",
      "settings": {
        "title": "Slideshow"
      },
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ],
  "locales": {
    "en": {
      "title": "Slideshow"
    },
    "fr": {
      "title": "Diaporama"
    }
  },
  "enabled_on": {
    "templates": ["*"],
    "groups": ["footer"]
  }
}
{% endschema %}

